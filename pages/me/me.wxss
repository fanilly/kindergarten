/* pages/me/me.wxss */

.header {
  width: 100%;
  height: 360rpx;
  box-shadow: 0 4rpx 8rpx rgba(42, 184, 102, .6);
  position: relative;
}

.header-bg {
  width: 100%;
  height: 360rpx;
}

.header-content {
  width: 100%;
  height: 360rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.portrait {
  width: 154rpx;
  height: 156rpx;
  position: relative;
  margin: 24rpx auto 0;
}

.protrait-wapper {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  overflow: hidden;
}

.protrait-wapper image {
  width: 100%;
  height: 100%;
}

.deposit {
  width: 41rpx;
  height: 41rpx;
  position: absolute;
  right: 6rpx;
  bottom: -6rpx;
}

.info view:first-child {
  line-height: 46rpx;
  height: 40rpx;
  padding-top: 10rpx;
}

.btns-wapper {
  width: 100%;
  height: 180rpx;
  position: absolute;
  bottom: -90rpx;
  box-sizing: border-box;
  padding: 0 15rpx;
}

.btns {
  width: 100%;
  height: 180rpx;
  border-radius: 10rpx;
  background-color: #fff;
  display: flex;
  box-shadow: 0 2px 10px rgba(204, 204, 204, .75);
}

.btns navigator {
  flex: 1;
  text-align: center;
  position: relative;
}

.btns navigator view:first-child {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding: 42rpx 12rpx 0;
}

.btns navigator view:nth-child(2) {
  padding-top: 16rpx;
}

.btns navigator image {
  position: absolute;
  right: 0;
  top: 0;
}


/*信息认证*/

.info-authentication {
  height: 270rpx;
  margin-top: 15rpx;
  background-color: #fff;
}

.info-title {
  height: 66rpx;
  display: flex;
  padding: 0 15rpx;
  line-height: 66rpx;
  border-bottom: 1px solid #eff3f6;
  align-items: center;
}

.info-title view:nth-child(1) {
  width: 36rpx;
}

.info-title view:nth-child(2) {
  width: 200rpx;
  padding-left: 15rpx;
}

.info-title view:nth-child(3) {
  flex: 1;
  text-align: right;
}

.info-content {
  display: flex;
  padding: 15rpx;
  text-align: center;
}

.info-content>navigator {
  flex: 1;
}

.evaluation-content {
  display: flex;
  text-align: center;
}

.evaluation-content>navigator {
  flex: 1;
  position: relative;
  height: 180rpx;
}

.mt46 {
  margin-top: 46rpx;
}

.line {
  width: 2rpx;
  height: 180rpx;
  position: absolute;
  right: 0;
  top:15rpx;
}

.list-wapper {
  margin: 15rpx 0;
  background-color: #fff;
  padding:0 15rpx;
}

.list-item {
  height: 36rpx;
  padding: 22rpx 0;
  display: flex;
  border-bottom: 1px solid #eff3f6;
  align-items: center;
}

.list-wapper .list-item:last-child{
  border-bottom: 0
}

.list-item view:nth-child(1){
  width: 50rpx;
}

.list-item view:nth-child(2){
  flex: 1;
}

.list-item view:nth-child(3){
  display: flex;
  align-items: center;
}
.list-item view:nth-child(3) text {
  padding-right: 15rpx;
}