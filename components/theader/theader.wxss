/* components/theader/theader.wxss */

.header {
  width: 100%;
  height: 360rpx;
  box-shadow: 0 4rpx 8rpx rgba(42, 184, 102, .6);
  position: relative;
}

.header-bg {
  width: 100%;
  height: 360rpx;
}

.header-content {
  width: 100%;
  height: 360rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.portrait {
  width: 154rpx;
  height: 156rpx;
  position: relative;
  margin: 60rpx auto 0;
}

.protrait-wapper {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  overflow: hidden;
}

.protrait-wapper image {
  width: 100%;
  height: 100%;
}

.deposit {
  width: 41rpx;
  height: 41rpx;
  position: absolute;
  right: 6rpx;
  bottom: -6rpx;
}
.info {
  color:#fff;
  text-align: center;
}
.info view:first-child {
  line-height: 46rpx;
  height: 40rpx;
  padding-top: 10rpx;
  font-size: 28rpx;
}

.info view:last-child {
	font-size: 24rpx;
}